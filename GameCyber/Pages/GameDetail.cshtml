                        </div>
                        <div class="d-flex">
                            <h5>My tron:&emsp;</h5>
                            <h5>30000 &nbsp;<strong>VND</strong></h5>
                        </div>
                        <div class="d-flex">
                            <h5>Com rang:&emsp;</h5>
                            <h5>35000 &nbsp;<strong>VND</strong></h5>
                        </div>

                    </div>
                    <div class="col-md-9">
                        <!--Chat section start-->
                        <div class="container">
                            <h3 class=" text-center">Messaging</h3>

                            <div class="messaging">
                                <div class="inbox_msg">
                                    <div class="mesgs">
                                        <div class="d-flex">
                                            <div class="incoming_msg_img me-3"> <img src="https://cdn-icons-png.flaticon.com/512/219/219983.png" alt="sunil"> </div>
                                            <div>
                                                <h4>Waiter</h4>
                                            </div>
                                        </div>


                                        <hr />
                                        <div class="msg_history" id="msg_container">


                                            @foreach (MessageModel message in Model.ChatViewModel.messages)
                                            {
                                                @*Received*@
                                                @if (message.UserSentId == Model.ChatViewModel.UserRecievedId)
                                                {
                                                    <div class="incoming_msg">
                                                        <div class="incoming_msg_img"> <img src="https://cdn-icons-png.flaticon.com/512/219/219983.png" alt="sunil"> </div>
                                                        <div class="received_msg">
                                                            <div class="received_withd_msg">
                                                                <p>
                                                                    @message.Message
                                                                </p>
                                                            </div>
                                                            <span style="font-size:8px"><em>@message.SentDate</em></span>
                                                        </div>
                                                    </div>
                                                }
                                                @*Send*@
                                                @if (message.UserSentId == Model.ChatViewModel.UserSentId)
                                                {
                                                    <div class="outgoing_msg">
                                                        <div class="sent_msg">
                                                            <p>
                                                                @message.Message
                                                            </p>
                                                        </div>
                                                    </div>
                                                }
                                            }

                                        </div>
                                        <div class="type_msg">
                                            <div class="input_msg_write">
                                                <input type="text" class="write_msg" id="messageInput" placeholder="Type a message" name="msg" />
                                                <input type="hidden" class="write_msg" id="userInput" name="userSentId" value="@Model.User.Id" />
                                                <input type="hidden" class="write_msg" id="userReceive" name="userReceiveId" value="@Model.ChatViewModel.UserRecievedId" />
                                                <button class="msg_send_btn" id="btn_sendMsg" type="button" form="formChat"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Chat section end-->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                </div>
            </div>
        </div>
