                                            <div class="msg_history" id="msg_container">


                                                @foreach (MessageModel message in Model.ChatViewModel.messages)
                                                {
                                                    @*Received*@
                                                    @if (message.UserSentId == Model.ChatViewModel.UserRecievedId)
                                                    {
